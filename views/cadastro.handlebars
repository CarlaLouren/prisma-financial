<div class="container mt-4 bg-white w-auto content-border content-cadastro">
  <div class="row justify-content-center align-items-center ">
    <div class=" col-md-6 text-center mb-4">
      <img src="{{../publicPath}}/img/login.png" alt="" class="img-fluid  imagem-cadastro" />
    </div>
    <div class="col-md-6 col-lg-5 form">

      <form action="/usuario/registrar"   method="POST">
        <div class="mb-2">
          <label for="fullname" class="form-label">Nome Completo</label>
          <input class="form-control" id="fullname" type="text" name="nomeCompleto" placeholder="Digite seu nome"
            required />
        </div>
        <div class="mb-2">
          <label for="email" class="form-label">Email</label>
          <input class="form-control" id="email" type="email" name="email" placeholder="Digite seu email" required />
          {{#if erro}}
          <span class="text-danger">{{erro}}</span>
          {{/if}}
        </div>
        <div class="mb-2">
          <label for="senha" class="form-label">Senha</label>
          <input class="form-control" id="senha" type="password" name="password" placeholder="Digite sua senha"
            required />
        </div>
        <div class="mb-2">
          <label for="confirmPassword" class="form-label">Confirme sua senha</label>
          <input class="form-control" id="confirmPassword" type="password" name="confirmPassword"
            placeholder="Digite sua senha novamente" required />
          {{#if senhaErro}}
          <span class="text-danger">{{senhaErro}}</span>
          {{/if}}
        </div>
        <div class="mb-2">
          <label class="form-label">GÃªnero</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="female" name="genero" value="feminino">
            <label class="form-check-label" for="female">Feminino</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="male" name="genero" value="masculino">
            <label class="form-check-label" for="male">Masculino</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="others" name="genero" value="outros">
            <label class="form-check-label" for="others">Outros</label>
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Criar Cadastro</button>
        </div>
      </form>
      <div class="text-center mt-4">
        <a href="/login" class="text-reset text-decoration-none text-primary fw-bold">Clique aqui para logar!</a>
      </div>
    </div>
  </div>
</div>